<nav class='navbar navbar-inverse navbar-fixed-top'>
  <div class='container'>
    <div class='navbar-header'>
      <button type='button'
              class='navbar-toggle collapsed'
              data-toggle='collapse'
              data-target='#navbar'
              aria-expanded='false'
              aria-controls='navbar'>
        <span class='sr-only'>Toggle navigation</span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </button>
      <li><%= link_to 'Community', root_url, class: 'navbar-brand' %></li>
    </div>

    <div id='navbar' class='collapse navbar-collapse'>
      <ul class='nav navbar-nav'>
        <li class='dropdown'>
          <a href='#'
            class='dropdown-toggle'
            data-toggle='dropdown'
            role='button'
            aria-expanded='false'>
            <i class="fa fa-users"></i>
            People
            <span class='caret'></span>
          </a>
          <ul class='dropdown-menu' role='menu'>
            <% User.all.each do |user| %>
              <li>
                <%= link_to user_path(user) do %>
                  <%= image_tag(user.avatar.nav_avatar, class: 'img-circle') %>
                  <%= user.username %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>

      <ul class='nav navbar-nav navbar-right'>
        <% if signed_in? %>
          <ul class='nav navbar-nav'>
            <li>
              <%= link_to new_post_path do %>
                <i class="fa fa-pencil"></i>
                New Post
              <% end %>
            </li>
          </ul>
          <li class='dropdown'>
            <a href='#'
               class='dropdown-toggle'
               data-toggle='dropdown'
               role='button'
               aria-expanded='false'>
              <%= image_tag(current_user.avatar.nav_avatar,
                            class: 'img-circle')%>
               <%= current_user.username %>
               <span class='caret'></span>
            </a>
            <ul class='dropdown-menu' role='menu'>
              <li>
                <%= link_to user_path(current_user) do %>
                  <i class='fa fa-user fa-fw'></i>
                  View profile
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path(current_user) do %>
                  <i class='fa fa-edit fa-fw'></i>
                  Edit profile
                <% end %>
              </li>
              <li class='divider'></li>
              <li>
                <%= link_to signout_path do %>
                  <i class='fa fa-sign-out fa-fw'></i>
                  Sign out
                <% end %>
              </li>
            </ul>
          </li>

        <% else %>

          <li><%= link_to '<i class="fa fa-user-plus"></i> Register'.html_safe,
            register_path %>
          </li>
          <li><%= link_to '<i class="fa fa-sign-in"></i> Sign In'.html_safe,
            signin_path %>
          </li>

        <% end %>
      </ul>
    </div><!--/.nav-collapse -->

  </div>
</nav>
