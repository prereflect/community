<div class='row'>
  <div class='col-md-3'>
    <%= image_tag(@user.avatar.profile_avatar,
      class: 'img-thumbnail')%>
  </div>
  <div class='col-md-9'>
    <h1><%= @user.username %></h1>
    <hr>
    <p><%= @user.bio %></p>
  </div>
</div>

<div class='col-md-12'>
  <% @user.posts.each do |post| %>
    <%= render '/posts/post', post: post %>
  <% end %>
</div>
